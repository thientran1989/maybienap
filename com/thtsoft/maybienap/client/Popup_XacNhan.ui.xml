<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.panel_size {
		width: 360px;
		height: 254px;
	}
	.title {
		font-size: large;
		font-style: bold;
	}
	.message {
		font-size: large;
	}
	.panel {
		padding: 5px;
		width: 100%;
	}
	.button {
		width: 100px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.panel_size}" width="360px" height="254px">
	<div align="center">
	<g:VerticalPanel styleName="{style.panel_size}">
			<g:VerticalPanel styleName="{style.panel}" horizontalAlignment="ALIGN_CENTER">
				<g:Label text="XÁC NHẬN" styleName="{style.title}"/>
			</g:VerticalPanel>
			<g:VerticalPanel styleName="{style.panel}">
				<g:Label text="New Label" styleName="{style.message}" ui:field="tv_message"/>
			</g:VerticalPanel>
			<g:HorizontalPanel width="100%">
				<g:VerticalPanel styleName="{style.panel}" horizontalAlignment="ALIGN_CENTER">
					<g:Button text="Huỷ Bỏ" styleName="{style.button}" ui:field="btn_CANCEL" />
				</g:VerticalPanel>
				<g:VerticalPanel styleName="{style.panel}" horizontalAlignment="ALIGN_CENTER">
					<g:Button text="Đồng Ý" styleName="{style.button}" ui:field="btn_OK" />
				</g:VerticalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	
	</div>
		
	</g:HTMLPanel>
</ui:UiBinder> 