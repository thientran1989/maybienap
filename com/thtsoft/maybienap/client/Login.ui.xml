<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.panel_padding {
		padding: 6px;
	}
	.button_padding {
		padding: 6px;
	}
	.title {
		padding: 10px;
		color:#FFFFFF;
		font-weight: bold;;
		font-size: 25px;
		background: #F50057;
	}
	.label_changepass {
		padding: 10px;
		color:#FFFFFF;
		font-weight: bold;;
		font-size: 15px;
	}
	.small_title {
		padding: 3px;
		color:#FFFFFF;
		font-weight: bold;;
		font-size: 12;
	}
	.panel_title {
		background: #F50057;
	}
	.panel_box {
		background: #3F15B5;
	}
	</ui:style>
	<g:HTMLPanel>
	<div align="center">
	<g:VerticalPanel width="300px" horizontalAlignment="ALIGN_CENTER" styleName="{style.panel_box}">
		<g:Label text="ĐĂNG NHẬP"  styleName="{style.title}" width="300px"/>
		<g:VerticalPanel styleName="{style.panel_padding}">
			<g:Label text="Tên Đăng Nhập" width="300px"  styleName="{style.small_title}"/>
			<g:TextBox width="300px" ui:field="edt_username"/>
			<g:Label text="Mật Khẩu" width="300px"  styleName="{style.small_title}"/>
			<g:PasswordTextBox width="300px" ui:field="edt_password"/>
			<g:Label text="Đổi Mật Khẩu" styleName="{style.label_changepass}" ui:field="label_changepass"/>
			<g:Label text="New Label" ui:field="tv_version"/>
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
			<g:VerticalPanel  styleName="{style.button_padding}">
				<g:Button text="Chỉ Xem" width="100px" ui:field="btn_xem"/>
			</g:VerticalPanel>
			<g:VerticalPanel   styleName="{style.button_padding}">
				<g:Button text="Đăng Nhập" width="100px" ui:field="btn_login"/>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
	</div>
	</g:HTMLPanel>
</ui:UiBinder> 