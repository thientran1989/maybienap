	<ui:style>
	.important {
		font-weight: bold;
	}
	.panel {
		margin-left: 0px;
		margin-right: 0px;
		margin-bottom: 0px;
	}
	.label {
		width: 700px;
		font-size: large;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:Label text="Tran Huu Thien" styleName="{style.label}" ui:field="tv_user"/>
		<g:ScrollPanel width="100%">
			<g:TabPanel width="100%" ui:field="tab_main" height="100%"/>
		</g:ScrollPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 